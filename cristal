#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>

int main() {
	
	int red = 200.00, blue = 100.00, yellow = 70.00, green = 50.00, black = 20.00, white = 10.00;
	int cristalred, cristalblue, cristalyellow, cristalgreen, cristalblack, cristalwhite, quantidade, saque;
	int bituca = quantidade;
	int i = 0;
	
	printf("\n****Bem-Vindo ao nosso Portal Mágico de Cristais Bituca****\n");
	printf("\n\nDigite quantos deseja sacar: ");
	scanf("%d", &quantidade);
	
	do {
	    switch(i) {
	    	
	        case 0:
	            cristalred = quantidade / red;
	            bituca = (quantidade%red);
	            cristalred = quantidade;
	            printf("%d Vermelho\n");
	        
	        case 1:
	            cristalblue = quantidade / blue;
	            bituca = (quantidade%blue);
	            cristalblue = quantidade;
	            printf("%d Azul\n");
	            
	        case 2:
	            cristalyellow = quantidade / yellow;
	            bituca = (quantidade%yellow);
	            cristalyellow = quantidade;
	            printf("%d Amarelo\n");
	            
	        case 3:
	            cristalgreen = quantidade / green;
	            bituca = (quantidade%green);
	            cristalgreen = quantidade;
	            printf("%d Verde\n");
	            
	        case 4:
	            cristalblack = quantidade / black;
	            bituca = (quantidade%black);
	            cristalblack = quantidade;
	            printf("%d Preto\n");
	            
	        case 5:
	        	cristalwhite = quantidade / white;
	            bituca = (quantidade%white);
	            cristalwhite= quantidade;
	            printf("%d Branco\n");
	    }
	    
	    //printf("\n***Você sacou %d e recebeu:", saque);
	    //printf("\n %d cristais vermelhos", cristalred); 
		  //printf("\n %d cristais azuis", cristalblue);
	    //printf("\n %d cristais amarelos", cristalyellow); 
		  //printf("\n %d cristais verdes", cristalgreen);
	    //printf("\n %d cristais pretos", cristalblack);
	    //printf("\n %d cristais brancos", cristalwhite);
   
	} while (bituca != 0);
	
}
